<div class="container">
    <div class="row">
        <div class="col-md-12">
            <%= simple_form_for @fiambenana, html: {class: 'form-horizontale'}, method: ['post'], url: ['create_fiambenana'] do |f| %>
                <%= f.input :date, as: :string, wrapper: :date %>
                <%= f.input :fiambenana_maraina %>
                <%= f.input :guide %>
                
                <%= f.input :creneau %>
                
                <%= f.input :lesson_du_jour %>
                
                <%= f.input :fiambenana_alina %>
                
                <%= f.input :poeme %>
            
                <%= f.button :submit %>
            <% end %>
        </div>
    </div>
</div>


<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker({dateFormat: "dd-M-yy"});
  });
</script>